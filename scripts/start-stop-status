#!/bin/bash
case "$1" in
    start)
	synosystemctl start pkgctl-homebridge
        ;;
    stop)
	synosystemctl stop pkgctl-homebridge
        ;;
    status)
	synosystemctl get-active-status pkgctl-homebridge
        ;;
    log)
        echo ""
        ;;
    *)
        echo "Usage: $0 {start|stop|status}" >&2
        exit 1
        ;;
esac
exit 0
